@model IEnumerable<Electro_ECommerce.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="position-relative" style="height: 200px; overflow: hidden;">
                        <img src="@Url.Content(item.ImageUrl ?? "/img/default.jpg")" class="card-img-top w-100 h-100 object-fit-cover" alt="@item.Name" onerror="this.src='/img/default.jpg';" />
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex flex-column justify-content-center align-items-center text-white text-center">
                            <h5 class="card-title">@item.Name</h5>
                            <a asp-action="Details" asp-route-id="@item.CategoryId" class="text-white fw-bold">View details ➜</a>
                        </div>
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>